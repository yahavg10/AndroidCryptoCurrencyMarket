<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp">

        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello,"
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/namewelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="     Guest"
            android:textColor="#fff"
            android:textSize="26dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/iconpic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/profile" />


        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:background="@drawable/search_bg">

            <ImageView
                android:id="@+id/search"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/search_img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="55dp"
                android:text="Search Stock"
                android:textColor="#03082b"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/arrow_bottom" />


        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/backend" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Everything Here"
                android:textSize="19dp"
                android:textColor="#d703082b"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="33dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='Stocks And crypto'
                android:textColor="#ab03082b"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="40dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/frontend" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analyze It..."
                android:textSize="19dp"
                android:textColor="#d703082b"
                android:textStyle="bold"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="33dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='fastest way to $$$'
                android:textColor="#ab03082b"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="40dp"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leading Stocks today"
            android:textColor="#03082b"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="23dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:layout_width="380dp"
            android:layout_height="80dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/cv3" />


        <ImageView
            android:layout_width="85dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/bbitcoin" />

        <TextView
            android:id="@+id/bitbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="20dp"
            android:text="Bitcoin"
            android:textColor="#d703082b"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bittxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="47dp"
            android:text="Bitcoin: 100$"
            android:textColor="#6003082b"
            android:textSize="14dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:layout_width="380dp"
            android:layout_height="80dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/cv4" />


        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/euro" />

        <TextView
            android:id="@+id/eurobtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="20dp"
            android:text="Euro"
            android:textColor="#d703082b"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ethtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="47dp"
            android:text="Euro: 100$"
            android:textColor="#6003082b"
            android:textSize="14dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:layout_width="380dp"
            android:layout_height="80dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/cv5" />


        <ImageView
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/dogecoin" />

        <TextView
            android:id="@+id/dodgebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="20dp"
            android:text="DodeCoin"
            android:textColor="#d703082b"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dodgetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="47dp"
            android:text="DodeCoin: 100$"
            android:textColor="#6003082b"
            android:textSize="14dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="415dp"
            android:layout_height="70dp"
            android:layout_marginBottom="1dp"/>

        <ImageView
            android:id="@+id/home_navigation"
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:layout_marginLeft="21dp"
            android:background="@drawable/baseline_home_24"/>


        <ImageView
            android:id="@+id/search_navigation"
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:layout_marginLeft="101dp"
            android:background="@drawable/baseline_search_24"/>

        <ImageView
            android:id="@+id/watchlist_navigation"
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:layout_marginLeft="181dp"
            android:background="@drawable/baseline_star_24"/>


        <ImageView
            android:id="@+id/settings_navigation"
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:layout_marginLeft="261dp"
            android:background="@drawable/baseline_settings_24"/>


        <ImageView
            android:id="@+id/Login_navigation"
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:layout_marginLeft="330dp"
            android:background="@drawable/baseline_login_24"/>
</RelativeLayout>
</LinearLayout>